# Server
SERVER_TYPE=http
SERVER_PORT=8080
SERVER_URL=https://evolution-api.railway.app

# Cors
CORS_ORIGIN=*
CORS_METHODS=POST,GET,PUT,DELETE
CORS_CREDENTIALS=true

# Authentication
AUTHENTICATION_TYPE=apikey
AUTHENTICATION_API_KEY=change-me-to-random-key
AUTHENTICATION_EXPOSE_IN_FETCH_INSTANCES=true

# Database (Optional - usar Redis para produção)
DATABASE_ENABLED=false
DATABASE_CONNECTION_URI=
DATABASE_CONNECTION_CLIENT_NAME=evolution_api

# Redis (Recomendado para produção)
REDIS_ENABLED=false
REDIS_URI=redis://localhost:6379

# RabbitMQ (Opcional)
RABBITMQ_ENABLED=false

# Websocket
WEBSOCKET_ENABLED=false

# WhatsApp Business
BUSINESSHOURS_ENABLED=false

# Logs
LOG_LEVEL=ERROR,WARN,DEBUG,INFO,LOG,VERBOSE,DARK,WEBHOOKS
LOG_COLOR=true
LOG_BAILEYS=false

# Provider (baileys ou business)
PROVIDER_ENABLED=baileys

# Storage (local ou s3)
PROVIDER_FILE=local
PROVIDER_HOST=http://localhost:8080

# Webhook
WEBHOOK_GLOBAL_ENABLED=false
WEBHOOK_GLOBAL_URL=
WEBHOOK_GLOBAL_WEBHOOK_BY_EVENTS=false

# QR Code
QRCODE_LIMIT=30
QRCODE_COLOR=#198754

# Instance
INSTANCE_EXPOSE_IN_FETCH_INSTANCES=true
DEL_INSTANCE=false

# Cache
CACHE_REDIS_ENABLED=false
CACHE_LOCAL_ENABLED=false
