# Configuração do Servidor WhatsApp
# Copie este arquivo para .env e preencha com suas credenciais

# Porta onde o servidor vai rodar
PORT=3333

# URL do Supabase
SUPABASE_URL=https://hxtbsieodbtzgcvvkeqx.supabase.co

# Service Role Key do Supabase
# Encontre em: Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_KEY=sua_service_key_aqui

# Chave de administrador para limpeza manual de sessão
# Usada no endpoint POST /admin/wipe-session (header: X-Admin-Key)
ADMIN_KEY=sua_chave_secreta_aqui

# Ambiente (development ou production)
NODE_ENV=development
